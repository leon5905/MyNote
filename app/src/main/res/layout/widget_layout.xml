<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/widget_summary_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/small_padding_or_margin"
    android:padding="8dp"
    android:orientation="vertical"
    android:clickable="true"
    android:background="@color/colorWhite">
    <TextView
        android:id="@+id/widget_summary_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/colorDark"/>

    <LinearLayout
        android:id="@+id/widget_summary_checklist_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"/>

    <!--<include layout="@layout/line_separator"/>-->

    <TextView
        android:id="@+id/widget_summary_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:paddingTop="8dp"
        android:textColor="@color/colorDark"/>

    <TextView
        android:id="@+id/widget_summary_reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:paddingTop="8dp"
        android:textColor="@color/colorDark"/>
</LinearLayout>