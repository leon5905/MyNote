<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/note_checklist_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/note_checklist_item_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>

        <EditText
            android:id="@+id/note_checklist_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/note_checklist_item_checkbox"
            android:background="@color/colorTransparent"
            android:hint="@string/activity_full_deatail_note_checklist_hint"
            android:inputType="textNoSuggestions"
            />

        <ImageButton
            android:id="@+id/note_checklist_item_remove_image_button"
            android:layout_width="@dimen/activity_full_detail_note_checklist_button_size"
            android:layout_height="@dimen/activity_full_detail_note_checklist_button_size"
            android:layout_alignParentRight="true"
            android:src="@drawable/action_remove"
            style="?borderlessButtonStyle"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</FrameLayout>